<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center|top"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="26dp"
            android:text="Zoom Temp Project" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ZoomLayout"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zoom_layout_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            style="@style/button_style"
            android:text="ZoomLayout Layout"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zoom_layout_image_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            style="@style/button_style"
            android:text="ZoomLayout ImageView - Not Work"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TouchImageView"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/touch_image_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            style="@style/button_style"
            android:text="TouchImageView One Image"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PhotoView"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/photo_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            style="@style/button_style"
            android:text="PhotoView One Image"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Zoomage"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zoomage_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            style="@style/button_style"
            android:text="Zoomage One Image"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Zoomy"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zoomy_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            style="@style/button_style"
            android:text="Zoomy One Image"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Self made"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/self_made_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            style="@style/button_style"
            android:text="Self made One Image"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Zoom TextView"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zoom_text_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            style="@style/button_style"
            android:text="Zoom TextView"/>

    </LinearLayout>

</ScrollView>
